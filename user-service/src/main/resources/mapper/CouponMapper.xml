<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wx2.user.mapper.CouponMapper">

    <select id="selectByIds" resultType="com.wx2.user.model.entity.Coupon">
        SELECT *
        FROM coupon
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="selectById" resultType="com.wx2.user.model.entity.Coupon">
        SELECT *
        FROM coupon
        WHERE id = #{id}
    </select>
</mapper>